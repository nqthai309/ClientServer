                        <option value="8">Nha Trang</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="text-input">Tên Khách Sạn</label>
                <div class="col-md-9">
                    <input class="form-control" id="description" type="text" name="description" placeholder="Tên Khách Sạn" value="">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="text-input">Ảnh Đại Diện</label>
                <div class="col-md-9">
                    <input class="form-control" id="description" type="text" name="description" placeholder="Ảnh Đại Diện" value="">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="text-input">Hạng</label>
                <div class="col-md-9">
                    <input class="form-control" id="description" type="number" name="description" placeholder="Hạng" value="">
