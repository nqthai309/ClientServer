
@{ IEnumerable<CNW_N8_MVC.Models.locations> listLocations = ViewData["listLocations"] as IEnumerable<CNW_N8_MVC.Models.locations>; }
@using CNW_N8_MVC.Class;
@using CNW_N8_MVC.Models;
@model dynamic
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Backend/Views/Shared/Backend.cshtml";
}



<div class="card">
    <div class="card-header"><strong></strong> Sửa khách sạn</div>
    <div class="card-body">
        <form class="form-horizontal" action="/BackendHotel/EditHotel" method="post" enctype="multipart/form-data">

            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="select1">Địa Điểm</label>
                <div class="col-md-9">
                    <select class="form-control" id="location_id" name="location_id">
                        @{ List<string> listName = new List<string>();}
                        @{ listName.Add("");}
                        @foreach (var it in listLocations)
                        {
                            listName.Add(it.location_name);
                        }


                        @for (int i = 1; i <= listLocations.Count(); i++)
                        {
                            if (i == Model.location_id)
                            {
                                <option selected="selected" value="@i">@listName[i]</option>
                            }
                            else
                            {
                                <option value="@i">@listName[i]</option>
                            }

                        }

                        <option selected="selected" value="@Model.location_id"> @Model.locations.location_name</option>
                        @foreach (locations it in listLocations)
                        {
                            <option value="@it.location_id">@it.location_name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="text-input">Tên Khách Sạn</label>
                <div class="col-md-9">
                    <input class="form-control" id="description" type="text" name="description" placeholder="Tên Khách Sạn" value="">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="text-input">Ảnh Đại Diện</label>
                <div class="col-md-9">
                    <input class="form-control" id="description" type="text" name="description" placeholder="Ảnh Đại Diện" value="">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="text-input">Hạng</label>
                <div class="col-md-9">
                    <input class="form-control" id="description" type="number" name="description" placeholder="Hạng" value="">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="text-input">Mô Tả</label>
                <div class="col-md-9">
                    <input class="form-control" id="description" type="text" name="description" placeholder="Mô Tả" value="">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="text-input">Chi tiết địa chỉ</label>
                <div class="col-md-9">
                    <input class="form-control" id="hotel_namee" type="text" name="hotel_name" placeholder="Chi tiết địa chỉ" value="">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="text-input">Số lượt đánh giá</label>
                <div class="col-md-9">
                    <input class="form-control" id="hotel_namee" type="number" readonly name="hotel_name" placeholder="Số lượt đánh giá" value="">
                </div>
            </div>
            <div style="color:red; font-size:20px; text-align:center" id="divThongBao"></div>
            <div class="card-footer">
                <button id="btnThem" class="btn btn-sm btn-primary" type="submit"> Submit</button>
            </div>
        </form>
    </div>
</div>
<script src="~/Scripts/js/EditHotel.js"></script>
