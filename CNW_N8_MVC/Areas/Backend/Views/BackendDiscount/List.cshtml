
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Backend/Views/Shared/Backend.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-align-justify"></i> Danh sách ưu đãi</div>
            <div class="card-body">
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <th>Mã ưu đãi</th>
                            <th>Giá trị</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < 3; i++)
                        {
                            <tr>
                                <td>1</td>
                                <td>20%</td>
                                <td><a href="@Url.Action("EditLocation","BackendDiscount", new {})">Sửa</a></td>
                                <td><a style="color:red" href="@Url.Action("DeleteLocation","BackendDiscount",new {})">Xoá</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
